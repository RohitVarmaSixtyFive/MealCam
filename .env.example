# Environment Variables Example
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/biteme?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Google Gemini AI API
GEMINI_API_KEY=your-gemini-api-key-here

# Cloudinary Configuration (for image storage
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Service Ports
GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
MEALS_SERVICE_PORT=3002
AI_SERVICE_PORT=3003
CLIENT_PORT=3000

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001
MEALS_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003

# Client Configuration
CLIENT_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# USDA Food Database API
USDA_API_KEY=your-usda-api-key

# External API Keys
NUTRITIONIX_APP_ID=your-nutritionix-app-id
NUTRITIONIX_API_KEY=your-nutritionix-api-key

# Environment
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_RETRY_ATTEMPTS=3
AI_TIMEOUT=30000  # 30 seconds

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Production URLs (update for production deployment)
PRODUCTION_API_URL=https://api.biteme.com
PRODUCTION_CLIENT_URL=https://biteme.com
