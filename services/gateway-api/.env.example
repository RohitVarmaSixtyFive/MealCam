# Gateway API Environment Variables

# Service Configuration
GATEWAY_PORT=3000
CLIENT_URL=http://localhost:3000

# JWT Secret (should match all services)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Microservice URLs
AUTH_SERVICE_URL=http://localhost:3001
MEALS_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003

# Redis Configuration (for distributed rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting Configuration
AUTH_RATE_LIMIT=10
MEALS_RATE_LIMIT=100
AI_RATE_LIMIT=20
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
SERVICE_TIMEOUT=5000  # 5 seconds

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
