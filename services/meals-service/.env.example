# Meals Service Environment Variables

# Database
MEALS_DB_URI=mongodb://localhost:27017/biteme_meals

# Service Configuration
MEALS_SERVICE_PORT=3002
CLIENT_URL=http://localhost:3000

# JWT Secret (should match auth service)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# External Services
AUTH_SERVICE_URL=http://localhost:3001
AI_PARSER_SERVICE_URL=http://localhost:3003
GATEWAY_SERVICE_URL=http://localhost:3000

# GEMINI API KEY
GEMINI_API_KEY=your_gemini_api_key_here

# USDA Food Database API
USDA_API_KEY=your_usda_api_key

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
