# BiteMe Microservices Environment Variables

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/biteme?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Gemini AI API
GEMINI_API_KEY=your-gemini-api-key-here

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Microservice Ports
GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
NUTRITION_SERVICE_PORT=3002
AI_SERVICE_PORT=3003
CLIENT_PORT=3000

# Service URLs (for gateway routing)
USER_SERVICE_URL=http://localhost:3001
NUTRITION_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003

# Environment
NODE_ENV=development

# Client Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
